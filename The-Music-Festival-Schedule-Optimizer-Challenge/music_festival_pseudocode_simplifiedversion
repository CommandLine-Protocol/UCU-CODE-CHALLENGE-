START PROGRAM

// Step 1: Define performance properties
DEFINE arrays base[4], growth[4], start[4], end[4]
ASSIGN values for each performance ID

// Step 2: Define the schedule
DEFINE arrays schedule_ids[], arrival_times[], departure_times[]
ASSIGN fixed schedule values (IDs and times)

// Step 3: Initialize total satisfaction
SET total_satisfaction = 0

// Step 4: Loop through each performance in the schedule
FOR i from 0 to length of schedule_ids - 1
    SET id = schedule_ids[i]
    
    // Step 4a: Calculate satisfaction for this performance
    SET duration = departure_times[i] - arrival_times[i]
    SET time_since_start = arrival_times[i] - start[id]
    SET start_hype = base[id] + growth[id] * time_since_start
    SET satisfaction = duration * start_hype + growth[id] * duration * (duration - 1) / 2

    // Step 4b: Add satisfaction to total
    total_satisfaction = total_satisfaction + satisfaction
END FOR

// Step 5: Output results
PRINT "Maximum satisfaction points achievable"
PRINT total_satisfaction
PRINT "Schedule: ["
FOR i from 0 to length of schedule_ids - 1
    PRINT schedule_ids[i], ":", arrival_times[i], "-", departure_times[i]
    IF i is not last index
        PRINT ", "
END FOR
PRINT "]"

END PROGRAM
